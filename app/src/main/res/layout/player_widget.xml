<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@color/GlobalBG"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notifAlbumCover"
            android:src="@drawable/default_cover"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center|left">

            <TextView
                android:id="@+id/notifSongTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF99"
                android:textSize="20sp"
                android:textStyle="bold"
                android:lines="1"
                android:text="@string/albumTitleText"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/notifSongArtistLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF99"
                android:textSize="18sp"
                android:lines="1"
                android:text="@string/albumArtistText"
                android:padding="2dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="0dp"
        android:layout_margin="0dp"
        android:background="#000">

        <ImageButton
            android:id="@+id/btnRepeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_repeat"
            android:background="@null"
            tools:ignore="ContentDescription"
            android:layout_gravity="center_vertical|left"
            android:layout_margin="0dp"
            android:padding="3dp"
            android:layout_weight="1"/>
        <!-- Previous Button -->
        <ImageButton
            android:id="@+id/btnPrevious"
            android:src="@drawable/btn_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            tools:ignore="ContentDescription"
            android:layout_margin="0dp"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"/>
        <!-- Backward Button -->
        <ImageButton
            android:id="@+id/btnBackward"
            android:src="@drawable/btn_backward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            tools:ignore="ContentDescription"
            android:layout_margin="0dp"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"/>
        <!-- Play Button -->
        <ImageButton
            android:id="@+id/btnPlayPause"
            android:src="@drawable/btn_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            tools:ignore="ContentDescription"
            android:layout_margin="0dp"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <!-- Forward Button -->
        <ImageButton
            android:id="@+id/btnForward"
            android:src="@drawable/btn_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            tools:ignore="ContentDescription"
            android:layout_margin="0dp"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"/>
        <!-- Next Button -->
        <ImageButton
            android:id="@+id/btnNext"
            android:src="@drawable/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            tools:ignore="ContentDescription"
            android:layout_margin="0dp"
            android:padding="3dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"/>
        <!-- Shuffle Button -->
        <ImageButton
            android:id="@+id/btnShuffle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_shuffle"
            android:background="@null"
            android:layout_gravity="center_vertical|right"
            android:layout_margin="0dp"
            android:padding="3dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>